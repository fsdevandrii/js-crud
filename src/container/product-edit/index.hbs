{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>

  <section>
    <div class="form">
      <h3 class="form__title-main">
        Інформація про товар
      </h3>

      {{#with data}}
      <form method="POST" action="/product-edit">
        <div class="form__wrap">
          <div class="form__field-wrap">
            <div class="form__content">
              <div class="form__field">
                <label for="name" class="form__label">Назва товару</label>
                <input type="text" name="name" class="form__input" value="{{name}}">
              </div>
            </div>

            <div class="form__content">
              <div class="form__field">
                <label for="price" class="form__label">Ціна</label>
                <input type="number" name="price" class="form__input" value="{{price}}">
              </div>
            </div>

            <div class="form__content">
              <div class="form__field">
                <label for="id" class="form__label">ID</label>
                <input type="number" name="id" class="form__input" value="{{id}}">
              </div>
            </div>
          </div>

          <div class="form__description-wrap">
            <div class="form__content">
              <div class="form__field">
                <label for="description" class="form__label">Короткий опис товару</label>
                <input class="form__input" id="description" name="description" type="description"
                  value="{{description}}">
              </div>
            </div>
          </div>

          <div class="form__button-wrap">
            <button class="form__button button-save">Зберегти оновлення</button>
            <a href="/product-delete?id={{id}}" class="form__button button-del">Видалити товар</a>
          </div>

        </div>
      </form>
      {{/with}}

    </div>
  </section>
</main>

