{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>

  <section>
    <div class="form">
      <h3 class="form__title-main">
        Інформація про товар
      </h3>

      {{#with data}}
      <form method="POST" action="/product-edit">
        <div class="form__wrap">
          <div class="form__field-wrap">
            <div class="form__content">
              <div class="form__field">
                <label for="product-info" class="form__label">Назва товару</label>
                <input value="{{name}}" type="product-info" name="product-info" class="form__input">
              </div>
            </div>

            <div class="form__content">
              <div class="form__field">
                <label for="product-price" class="form__label">Ціна</label>
                <input value="{{price}}" type="product-price" name="product-price" class="form__input">
              </div>
            </div>

            <div class="form__content">
              <div class="form__field">
                <label for="product-id" class="form__label">ID</label>
                <input disabled value="{{id}}" type="product-id" name="product-id" class="form__input">
              </div>
            </div>
          </div>

          <div class="form__description-wrap">
            <div class="form__content">
              <div class="form__field">
                <label for="product-description" class="form__label">Короткий опис товару</label>
                <input value="{{description}}" type="product-description" name="product-description"
                  class="form__input">

              </div>
            </div>
          </div>

          <div class="form__button-wrap">
            <button class="form__button button-save">Зберегти оновлення</button>
            <a href="/product-delete?id={{id}}" class="form__button button-del">Видалити товар</a>
          </div>

        </div>
      </form>
      {{/with}}

    </div>
  </section>
</main>

